<div class="col-md-4" data-id="<%= portfolio_item.id %>">
  <div class="card mb-4 shadow-sm">
    <%=image_tag(portfolio_item.thumb_image_url) unless portfolio_item.thumb_image.nil? %>
      <div class="card-body">
        <p class="card-text">
          <b><%= portfolio_item.title %></b> 
          <br><%= portfolio_item.subtitle %>
        </p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <a class="btn btn-sm btn-outline-secondary" href="<%= portfolio_show_path(portfolio_item.id) %>" role="button">View</a>
            <a class="btn btn-sm btn-outline-secondary" href="<%= portfolio_show_path(portfolio_item.id) %>" role="button">Edit</a>
            <a class="btn btn-sm btn-outline-secondary" href="<%= portfolio_show_path(portfolio_item.id) %>" role="button">Delete</a>
          </div>
          <small class="text-muted"><!-- 9 mins --></small>
        </div>
      </div>
    </div>
</div>